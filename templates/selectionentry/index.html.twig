{% extends 'base.html.twig' %}

{% block title %}EntryLink index{% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-lg-12 py-2">
                <h1>EntryLink</h1>

                <table class="table">
                    <thead>
                    <tr>
                        <th>Id</th>
                        <th>Name</th>
                        <th>actions</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for entry in pagination.data %}
                        <tr>
                            <td>{{ entry.id }}</td>
                            <td>{{ entry.targetObj.name|default(entry.targetId) }}</td>
                            <td>
                                <a class="btn btn-secondary" role="button" href="{{ path('selectionentry_show', {'id': entry.id}) }}"><i class="fas fa-eye"></i></a>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="4">no records found</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
                {{ pagination.display }}
            </div>
        </div>
    </div>
{% endblock %}