{% extends 'base.html.twig' %}

{% block title %}Rule index{% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-lg-12 py-2">
                <h1>Rule index</h1>
                <table class="table">
                    <thead>
                    <tr>
                        <th>Id</th>
                        <th>Name</th>
                        <th>Origin</th>
                        <th>LastUpdateOrigin</th>
                        <th>CreatedAt</th>
                        <th>UpdatedAt</th>
                        <th>actions</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for rule in pagination.data %}
                        <tr>
                            <td>{{ rule.id }}</td>
                            <td>{{ rule.name }}</td>
                            <td data-toggle="tooltip" data-placement="left"
                                title="{{ rule.origin }}">{{ rule.origin|slice(0, 20) }}...
                            </td>
                            <td data-toggle="tooltip" data-placement="left"
                                title="{{ rule.lastUpdateOrigin }}">{{ rule.lastUpdateOrigin|slice(0, 20) }}...
                            </td>
                            <td>{{ rule.createdAt ? rule.createdAt|date('Y-m-d') : '' }}</td>
                            <td>{{ rule.updatedAt ? rule.updatedAt|date('Y-m-d') : '' }}</td>
                            <td>
                                <a class="btn btn-secondary" role="button"
                                   href="{{ path('rule_show', {'id': rule.id}) }}"><i class="fas fa-eye"></i></a>
                                <a class="btn btn-warning" role="button"
                                   href="{{ path('rule_edit', {'id': rule.id}) }}"><i class="fas fa-edit"></i></a>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="8">no records found</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
                {{ pagination.display }}
                <a class="btn btn-primary" role="button" href="{{ path('rule_new') }}">Create new <i
                            class="fas fa-plus"></i></a>
            </div>
        </div>
    </div>
{% endblock %}
