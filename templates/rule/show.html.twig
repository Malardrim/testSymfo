{% extends 'base.html.twig' %}

{% block title %}Rule{% endblock %}

{% block body %}
<div class="container">
    <div class="row">
        <div class="col-lg-12 py-2">
            <h1>Rule</h1>

            <table class="table">
                <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ rule.id }}</td>
                </tr>
                <tr>
                    <th>Name</th>
                    <td>{{ rule.name }}</td>
                </tr>
                <tr>
                    <th>Description</th>
                    <td>{{ rule.description|raw }}</td>
                </tr>
                <tr>
                    <th>Origin</th>
                    <td>{{ rule.origin }}</td>
                </tr>
                <tr>
                    <th>LastUpdateOrigin</th>
                    <td>{{ rule.lastUpdateOrigin }}</td>
                </tr>
                <tr>
                    <th>Phases</th>
                    <td>{% if rule.phases|length %}{% for phase in rule.phases %}{{ phase }}{% if not loop.last %}, {% endif %}{% endfor %}{% else %}All phases{% endif %}</td>
                </tr>
                <tr>
                    <th>CreatedAt</th>
                    <td>{{ rule.createdAt ? rule.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                </tr>
                <tr>
                    <th>UpdatedAt</th>
                    <td>{{ rule.updatedAt ? rule.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                </tr>
                <tr>
                    <th>Type</th>
                    <td>{{ rule.type }}</td>
                </tr>
                </tbody>
            </table>

            <a class="btn btn-primary" role="button" href="{{ path('rule_index') }}">back to list</a>

            <a class="btn btn-primary" role="button" href="{{ path('rule_edit', {'id': rule.id}) }}">edit</a>

            {{ include('rule/_delete_form.html.twig') }}
        </div>
    </div>
</div>
{% endblock %}
