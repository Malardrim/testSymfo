{% form_theme form 'forms/custom_form.html.twig' %}
{{ form_start(form) }}
<div class="card">
    <div class="card-body">
        <div class="row">
            <div class="col-lg-6">
                {{ form_row(form.name) }}
                {{ form_row(form.faction) }}
            </div>
            <div class="col-lg-6">
                {{ form_row(form.origin) }}
                {{ form_row(form.lastUpdateOrigin) }}
            </div>
        </div>
        <div class="row">
            <div class="col-lg-6">
                {{ form_row(form.type) }}
            </div>
        </div>
        <div class="row">
            <div class="col-lg">
                {{ form_row(form.description) }}
            </div>
        </div>
        <div class="row">
            <div class="col-lg">
                {{ form_row(form.phases, {'label_attr': {'class': 'checkbox-inline checkbox-custom'}}) }}
            </div>
        </div>
    </div>
    <div class="card-footer text-muted">
        <button class="btn btn-primary my-1 float-right"><i class="fas fa-save"></i> {{ button_label|default('Save') }}</button>
    </div>
</div>
{{ form_end(form) }}
