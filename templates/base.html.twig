<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{% block title %}SymfonyTest{% endblock %}</title>
    {% block stylesheets %}
        <link rel="stylesheet" href="{{ asset('build/css/app.css') }}">
        {#{{ encore_entry_link_tags('app') }}#}
    {% endblock %}
</head>
<body>
{% block navbar %}
    {% include 'navbar.html.twig' %}
{% endblock %}
{% block alerts %}
    {% for flash in app.flashes('danger') %}
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <strong>{{ flash|trans(arguments = [], domain = 'alerts') }}</strong>
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    {% endfor %}
    {% for flash in app.flashes('warning') %}
        <div class="alert alert-warning alert-dismissible fade show" role="alert">
            <strong>{{ flash|trans(arguments = [], domain = 'alerts') }}</strong>
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    {% endfor %}
    {% for flash in app.flashes('success') %}
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <strong>{{ flash|trans(arguments = [], domain = 'alerts') }}</strong>
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    {% endfor %}
    <div class="alert alert-success fade" role="alert" id="copy-info">
        <strong>Text copied</strong>
    </div>
{% endblock %}
{% block body %}{% endblock %}
{% block javascripts %}
    {#{{ encore_entry_script_tags('app') }}#}
    {#<script src="{{ asset('build/runtime.js') }}"></script>#}
    <script src="{{ asset('build/js/app.js') }}"></script>
{% endblock %}
</body>
</html>
