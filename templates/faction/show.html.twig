{% extends 'base.html.twig' %}

{% block title %}Faction{% endblock %}

{% block body %}
    <a class="btn btn-primary position-sticky float-left m-5" role="button" href="{{ path('faction_index') }}"><i
                class="fas fa-arrow-left"></i> Back</a>
    <div class="container">
        <h1>Faction</h1>

        <table class="table">
            <tbody>
            <tr>
                <th>Id</th>
                <td>{{ faction.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ faction.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ faction.description }}</td>
            </tr>
            </tbody>
        </table>
        <div class="d-inline">
            <a class="btn btn-warning d-inline" role="button" href="{{ path('faction_edit', {'id': faction.id}) }}"><i class="fas fa-edit"></i></a>
            {{ include('faction/_delete_form.html.twig', {'delete_class': 'd-inline'}) }}
        </div>
    </div>
{% endblock %}
