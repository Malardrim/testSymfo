{% extends 'base.html.twig' %}

{% block title %}Faction index{% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-lg-12 py-2">
                <h1>Faction index</h1>

                <table class="table">
                    <thead>
                    <tr>
                        <th>Id</th>
                        <th>Name</th>
                        <th>Description</th>
                        <th>actions</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for faction in factions %}
                        <tr>
                            <td>{{ faction.id }}</td>
                            <td>{{ faction.name }}</td>
                            <td>{{ faction.description|raw }}</td>
                            <td>
                                <a class="btn btn-secondary" role="button" href="{{ path('faction_show', {'id': faction.id}) }}"><i class="fas fa-eye"></i></a>
                                <a class="btn btn-warning" role="button" href="{{ path('faction_edit', {'id': faction.id}) }}"><i class="fas fa-edit"></i></a>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="4">no records found</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>

                <a href="{{ path('faction_new') }}" role="button" class="btn-success btn">Create new <i class="fas fa-plus"></i></a>
            </div>
        </div>
    </div>
{% endblock %}
